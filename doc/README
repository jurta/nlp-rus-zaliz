-*- mode: outline-minor -*-
Задача - по заданному слову (словоформе) построить парадигму слова.

* wf0
wf0(+Word,-CaseTableList).
** вал
wf0("вале",
    [
      itable(с,
             w(вал,2,с(м),[с,1,м,"1м"],[c('общая стоимость продукции')]),
             [
                wf(c(е,и),w("вал",2)),
                wf(c(е,р),w("вала",2)),
                wf(c(е,п),w("вале",2)),
                wf(c(м,и),w("валы",4,['-'])),
             ]
            ),
      itable(с,
             w(вал,2,с(м),[с,1,м,"1м",[п2,(на)]],[c('земляная насыпь, волна; стержень')]),
             [
                wf(c(е,и),w("вал",2)),
                wf(c(е,р),w("вала",2)),
                wf(c(е,п),[w("вале",2),w("валу",4,[п2(на)])]),
                wf(c(м,и),w("валы",4)),
             ]
            )]).

* wf
wf(+Word,+Case,-WordFormList).
wf("вал",c(е,п),[w("вале",2,[]),w("валу",4,[п2(на)])]).
wf("мел",c(е,р),[w("мела",2,[]),w("мелу",2,[р2])]).
wf("мел",c(м,п),[w("мелами",4,['-'])]).

* задача
% WF1 - и.п., WF2 - X.п.
wf(WF1,X,WF2) :- wf(W,_,WF1), wf(W,X,WF2).

1. по заданной словарной статье и падежу найти словоформу
wf(w(посол,4,с(м,о),с("м1*b"),'дипломат'), с(р,м), Y). -> Y=w(послов,5).

2. по заданной словоформе найти словарную статью и падеж
wf(X,P,w(послов)).   -> X=w(посол,4,с(м,о),с("м1*b"),'дипломат'), P=с(р,м).
wf(X,P,w(послов,5)). -> X=w(посол,4,с(м,о),с("м1*b"),'дипломат'), P=с(р,м).

wf(X,P,w(компасы)).     -> X=w(компас,2,с(м),с("м1а")),             P=с(и,м).
                        -> X=w(компас,5,с(м),с("м1а"),'у моряков'), P=с(и,м).
wf(X,P,w(компасы,5)).   -> X=w(компас,5,с(м),с("м1а"),'у моряков'), P=с(и,м).

================================================================
* посол
wf(w(посол), X).
wf(w(посол,4), X).
wf(w(посол,4,'дипломат'), X).
wf(w(посол,4,с(м,о)), X).
wf(w(посол,4,с(м,о),с("м1*b"),'дипломат'), X).

wf(w(посол,4),'дипломат',с(и,м),w(послы,5)).
wf(w(посол,4),'дипломат',с(р,м),w(послов,5)).
wf(w(посол,4),'засол',с(и,м),w(посолы,4)).
wf(w(посол,4),'засол',с(р,м),w(посолов,4)).

pr_wf(X) :-              wf(Y,C ,_     ,w(X,_)), wf(Y,C ,F,Z), write([Z,F]).
pr_wf_only_from_im(X) :- wf(Y,Co,с(и,_),w(X,_)), wf(Y,Co,F,Z), write([Z,F]).

================================================================
