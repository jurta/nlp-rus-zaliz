REVDIC_PL = '($$a,$$b)=split(/ /,$$_,2);$$_=reverse($$a)." $$b"'
rev: $(DICT_REV)
$(DICT_REV): $(DICT_TXT)
	perl -ple $(REVDIC_PL) $(DICT_TXT) \
	| LANG=ru_RU.KOI8-R sort -t " " -k 1,1 \
	| perl -ple $(REVDIC_PL) \
	> $(DICT_REV)
